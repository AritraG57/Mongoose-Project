<div class="max-w-6xl mx-auto px-4 py-8">

    <!-- Title -->
    <h1 class="text-3xl font-semibold text-gray-900 mb-4">
      <%= home.homename %>
    </h1>

    <!-- Image + Info -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

      <!-- Image -->
      <div class="md:col-span-2">
        <img 
          src="<%= home.image %>" 
          alt="Home Image"
          class="w-full h-[420px] object-cover rounded-xl shadow-sm"
        >
      </div>

      <!-- Booking Card -->
      <div class="bg-white rounded-xl shadow-lg p-6 h-fit">

        <!-- Price -->
        <div class="flex items-center justify-between mb-4">
          <p class="text-2xl font-semibold text-gray-900">
            ₹<%= home.price %>
            <span class="text-base font-normal text-gray-500">/ night</span>
          </p>

          <!-- Rating -->
          <div class="flex items-center gap-1 text-sm">
            <span class="text-red-500">★</span>
            <span class="font-medium"><%= home.rating %></span>
          </div>
        </div>

        <!-- Divider -->
        <hr class="my-4">

        <!-- Favourotes Button -->
         <%- include('./favourites.ejs') %>

        <!-- Info -->
        <a href="/" class = "w-full flex justify-center items-center text-xs text-gray-500 text-center mt-3">
          Go Back To Home
        </a>
      </div>
    </div>

    <!-- Extra Info Section -->
    <div class="mt-10 bg-white rounded-xl p-6 shadow-sm">
      <h2 class="text-xl font-semibold mb-2">About this place</h2>
      <p class="text-gray-600 text-sm leading-relaxed">
        <%= home.description %>
      </p>
    </div>

  </div>