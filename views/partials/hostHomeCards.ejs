<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
  <% registeredHomes.forEach((el)=> { %>
    <div
      class="group bg-white rounded-2xl shadow-md overflow-hidden
             hover:shadow-2xl transition-all duration-300"
    >

      <!-- Image -->
      <div class="relative">
        <img
          src="<%= el.image %>"
          alt="<%= el.homename %>"
          class="h-52 w-full object-cover group-hover:scale-105 transition duration-300"
        />

        <!-- Rating badge -->
        <div
          class="absolute top-3 right-3 bg-white/90 backdrop-blur
                 px-2 py-1 rounded-lg text-sm font-medium text-gray-700 shadow"
        >
          <i class="fa-solid fa-star text-yellow-400 mr-1"></i>
          <%= el.rating %>
        </div>
      </div>

      <!-- Content -->
      <div class="p-4 space-y-2">
        <p class="font-semibold text-lg text-gray-800 truncate">
          <i class="fa-solid fa-house text-gray-400 mr-1"></i>
          <%= el.homename %>
        </p>

        <p class="text-rose-500 font-bold text-lg">
          â‚¹<%= el.price %>
          <span class="text-sm font-medium text-gray-500">/ night</span>
        </p>
      </div>

      <!-- Actions -->
      <div
        class="flex items-center justify-between px-4 pb-4 pt-2
               border-t border-gray-100"
      >
        <%- include('./editButton.ejs',{ home : el }) %>
        <%- include('./deleteButton.ejs',{ home : el }) %>
      </div>

    </div>
  <% }) %>
</div>
